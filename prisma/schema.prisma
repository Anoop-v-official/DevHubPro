// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  bookmarks     Bookmark[]
  snippets      CodeSnippet[]
  toolUsage     ToolUsage[]
  preferences   UserPreferences?
  contributions Contribution[]
  errorPosts    ErrorPost[]
  errorAnswers  ErrorAnswer[]
  votes         Vote[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Bookmarks/Favorites
model Bookmark {
  id        String   @id @default(cuid())
  userId    String
  type      String   // 'tool', 'blog', 'cheatsheet', 'error'
  itemId    String
  itemTitle String
  itemUrl   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type, itemId])
  @@index([userId])
}

// Code Snippets Saving
model CodeSnippet {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  code        String
  language    String
  tags        String   // JSON array of tags
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([language])
}

// Tool Usage Tracking
model ToolUsage {
  id        String   @id @default(cuid())
  userId    String
  toolName  String
  toolUrl   String
  usedAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([toolName])
}

// User Preferences
model UserPreferences {
  id                String   @id @default(cuid())
  userId            String   @unique
  theme             String   @default("system") // 'light', 'dark', 'system'
  defaultCodeLang   String   @default("javascript")
  emailNotifications Boolean @default(true)
  favoriteTools     String   // JSON array
  recentSearches    String   // JSON array
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// User Contributions (Articles, Tutorials, etc.)
model Contribution {
  id          String   @id @default(cuid())
  userId      String
  type        String   // 'article', 'tutorial', 'error-solution'
  title       String
  content     String
  status      String   @default("pending") // 'pending', 'approved', 'rejected'
  category    String
  tags        String   // JSON array
  submittedAt DateTime @default(now())
  reviewedAt  DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

// Error Q&A System (Stack Overflow style)
model ErrorPost {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String
  errorMessage String
  codeSnippet String?
  language    String
  framework   String?
  tags        String   // JSON array
  attempted   String   // What user has tried
  environment String?  // Environment details
  views       Int      @default(0)
  voteCount   Int      @default(0)
  bounty      Int?
  status      String   @default("open") // 'open', 'answered', 'closed'
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  answers ErrorAnswer[]
  votes   Vote[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model ErrorAnswer {
  id          String   @id @default(cuid())
  errorPostId String
  userId      String
  content     String
  codeSnippet String?
  isAccepted  Boolean  @default(false)
  voteCount   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  errorPost ErrorPost @relation(fields: [errorPostId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  votes     Vote[]

  @@index([errorPostId])
  @@index([userId])
}

model Vote {
  id            String   @id @default(cuid())
  userId        String
  value         Int      // 1 for upvote, -1 for downvote
  errorPostId   String?
  errorAnswerId String?
  createdAt     DateTime @default(now())

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  errorPost   ErrorPost?   @relation(fields: [errorPostId], references: [id], onDelete: Cascade)
  errorAnswer ErrorAnswer? @relation(fields: [errorAnswerId], references: [id], onDelete: Cascade)

  @@unique([userId, errorPostId])
  @@unique([userId, errorAnswerId])
  @@index([userId])
}
